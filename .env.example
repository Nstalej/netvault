# ============================================
# NetVault Environment Configuration
# ============================================
# Copy this file as .env and adjust values

# Application
NETVAULT_ENV=production
APP_NAME=NetVault
APP_VERSION=0.1.0

# Ports (change if conflicts exist)
DASHBOARD_PORT=8080
API_PORT=8443

# Timezone
TZ=America/Guatemala

# Security
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_STRING_MIN_32_CHARS
CREDENTIALS_MASTER_KEY=CHANGE_THIS_TO_ANOTHER_RANDOM_STRING

# Database
DB_PATH=/app/data/netvault.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/netvault.log

# Agent Communication
AGENT_AUTH_TOKEN=CHANGE_THIS_AGENTS_USE_THIS_TO_AUTHENTICATE

# MCP Server (Phase 4)
# MCP_ENABLED=false
# MCP_PORT=8444